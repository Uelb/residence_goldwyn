<%- if controller_name != 'sessions' %>

  <div class="connect"><%= link_to "Se connecter", new_session_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="firstconnect"><%= link_to "Vous n'êtes jamais venu ? Entrez vos coordonnées", new_registration_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <div class="forgetpassword"><%= link_to "Vous avez oublié votre mot de passe", new_password_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="connect"><%= link_to "Vous n'avez pas reçu votre email de confirmation", new_confirmation_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="connect"><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></div>>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="connect"><%= link_to "Se connecter avec #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></div>
  <% end -%>
<% end -%>