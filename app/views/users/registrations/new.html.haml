%div.signup
	%h2 Sign up
	%div.lbl
		= render :partial => "users/shared/links"
	= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
		= devise_error_messages!
		.field
			= f.label :email
			= f.email_field :email
		.field
			= f.label :password, "Mot de passe"
			= f.password_field :password
		.field
			= f.label :password_confirmation, "Confirmation du mot de passe"
			= f.password_field :password_confirmation
		.field
			.adress
				= f.label :address
				= f.text_area :address
		.field
			= f.label :phone
			= f.phone_field :phone
		.field
			= f.label :first_name
			= f.text_field :first_name
		.field
			= f.label :last_name
			= f.text_field :last_name
		%div.btnvalid
			= f.submit "S'enregister et Continuer sa r√©servation"
	%div.clear
