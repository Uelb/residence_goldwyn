.general
	.lbl
		.firstconnect
			= link_to "Vous voulez obtenir un compte agence", new_agency_path
	=form_tag agencies_connect_path, :method => "post" do
		%div 
			= text_field :agency, :id, :placeholder => "Id de l'agence"
		%div 
			= text_field :agency, :name, :placeholder => "Nom de l'agence"
		%div 
			= telephone_field :agency, :phone, :placeholder => "Téléphone de l'agence"
		= submit_tag